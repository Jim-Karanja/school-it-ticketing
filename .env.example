# Example environment configuration file
# Copy this file to '.env' and update the values for your environment

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration (SQLite is used by default)
# For production, you might want to use PostgreSQL or MySQL
# DATABASE_URL=postgresql://user:password@localhost/helpdesk_db

# Email Configuration (Required for email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=helpdesk@school.edu
IT_EMAIL=it@school.edu

# Application Settings
SCHOOL_NAME=Your School Name
SCHOOL_DOMAIN=school.edu
IT_PHONE=(555) 123-4567
IT_OFFICE_LOCATION=Room 110

# Security Settings (for production)
FORCE_HTTPS=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
